<div class="container">
    <section>
        <form class="addpet-form mt-3">
            <h4>ADD NEW PET</h4>
            <div class="form-group">
                <label for="name-pet">Pets Name</label>
                <input type="text" class="form-control" id="name-pet" placeholder="Enter Pets Name">
            </div>
            <div class="form-group">
                <label for="age-pet">Age</label>
                <input type="text" class="form-control" id="age-pet" placeholder="Enter Age">
            </div>
            <div class="form-group">
                <label for="species-pet">Species</label>
                <input type="text" class="form-control" id="species-pet" placeholder="Enter Species">
            </div>
            <div class="form-group">
                <label for="breed-pet">Breed</label>
                <input type="text" class="form-control" id="breed-pet" placeholder="Enter Pet Skills">
            </div>
            <div class="form-group">
                <label for="bio-pet">Bio</label>
                <input type="text" class="form-control" id="bio-pet" placeholder="Enter Bio">
            </div>
            <div class="form-group">
                <label for="feeding-pet">Feeding Habits</label>
                <input type="text" class="form-control" id="feeding-pet" placeholder="Enter Bio">
            </div>
            <div class="form-group">
                Gender:
                <input type="radio" name="gender" value="Male">Male
                <input type="radio" name="gender" value="Female">Female
            </div>
            <div class="form-group">
                <label for="interactive-pet">Interactive </label>
                <input type="checkbox" id="interactive-pet" value="true">
            </div>
            <div class="form-group">
                <label for="meutered-pet">Neutered</label>
                <input type="checkbox" id="meutered-pet" value="true">
            </div>
            <div class="form-group">
                <label for="pottyTrained-pet">Potty Trained</label>
                <input type="checkbox" id="pottyTrained-pet" value="true">
            </div>
            <button type="submit" class="btn btn-info btn-lg btn-block btn-signup">Submit</button>
        </form>
    </section>
</div>

<script src="/javascript/addpet.js"></script>