<section class="pet-card row ">
  {{#each pets as |pet|}}
  <div class=" col-sm-3 mb-5 ">
    <div class="card" style="width: 18rem;">
    <img src="https://ucarecdn.com/60ac9bb2-cc23-4052-b03b-2686a9578cb3/mypet.jpg" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title text-center">{{pet.pet_name}}</h5>
      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Animal: {{pet.species}}</li>
      <li class="list-group-item">Gender: {{pet.gender}}</li>
      <li class="list-group-item">Age: {{pet.age}}</li>
    </ul>
   <a href="#" class="btn btn-primary">View Profile</a>
  </div>
 </div> 
 {{/each}}
</section>


